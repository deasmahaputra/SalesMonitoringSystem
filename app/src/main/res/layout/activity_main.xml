<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/logo_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/autoo" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.80"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Silahkan melakukan Login"
            android:id="@+id/textInfo"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/White" />

        <EditText
            android:id="@+id/username_text"
            android:imeOptions="actionNext"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:hint="@string/username"
            android:inputType="textPersonName"
            android:drawableLeft="@drawable/person"
            android:drawablePadding="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:background="@android:drawable/editbox_background_normal"/>
        <EditText
            android:id="@+id/pass_text"
            android:imeOptions="actionDone"
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:hint="@string/password"
            android:drawableLeft="@drawable/locked"
            android:drawablePadding="16dp"
            android:inputType="textPassword"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:background="@android:drawable/editbox_background_normal"/>
        <Button
            android:id="@+id/login_button"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@color/button_material_dark"
            android:text="@string/login"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@color/secondary_text_default_material_dark"/>
    </LinearLayout>

</LinearLayout>
